fontify($canela, $canela-hash, $serif)
fontify($publico, $publico-hash, $serif)
fontify($atlas, $atlas-hash, $sans)

html, body
	background-color #fff
	color $off-black
	font-size 18px

p
	line-height 1.8
	color $gray-dark
	max-width 35rem
	margin 1rem auto 2rem auto
	&.no-margin
		margin-bottom 1rem

a
	text-decoration none
	border-bottom 2px solid $primary
	color $off-black

.intro
	max-width 35rem
	margin 0 auto
	margin-top 3rem
.intro__hed
	font-weight 700
	font-size 2rem
	line-height 1.2
	+mq('bp-2')
		font-size 3rem

.intro__meta
	display flex
	margin 1rem 0 4rem 0
	justify-content space-between
	p 
		margin 0
		font-size 0.9rem
	
main 
	padding 1rem
	margin 0 auto

.subhed
	font-weight 700
	font-size 1.3rem
	margin-top 3rem
	max-width 35rem
	margin 3rem auto 0 auto
	
main ul
	max-width 35rem
	margin 0 auto
	padding-bottom 4rem
	li
		font-size 1.1rem
		line-height 1.7
		list-style-type circle
		margin-left 1rem
	
.video-container
	max-width 50rem
	margin 4rem auto
	display flex
	align-items center
	justify-content space-around
	filter grayscale(100%)
	opacity 0.5
	cursor pointer
	transition all 250ms ease-in-out
	&:hover 
		filter grayscale(0%)
		opacity 1
	video
		width 66%
		border 1px solid $gray-light
		display none
		margin 0.3%
		+mq('bp-3')
			width 33%
			display block
		&:first-child
			display block

.code-container
	max-width 50rem
	margin 4rem auto
	font-size 0.9rem